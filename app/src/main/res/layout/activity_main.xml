<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lina"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.mdnappz.lbr.MainActivity">

    <TextView
        android:id="@+id/textHelloWorld"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:text="@string/EditedHelloWorld"
        android:textColor="@android:color/white"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/secondHelloWorld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="15dp"
        android:text="@string/SecondHelloWorld"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="2"
        android:padding="15dp"
        android:rowCount="3">

        <Button
            android:id="@+id/button1"
            android:layout_column="0"
            android:layout_row="0"
            android:onClick="b1press"
            android:text="@string/blueAndBlack1" />

        <Button
            android:id="@+id/button2"
            android:layout_column="1"
            android:layout_row="0"
            android:onClick="b2press"
            android:text="@string/blueAndBlack2" />

        <Button
            android:id="@+id/button3"
            android:layout_column="0"
            android:layout_row="1"
            android:onClick="b3press"
            android:text="@string/blueAndBlack3" />

        <Button
            android:id="@+id/button4"
            android:layout_column="1"
            android:layout_row="1"
            android:onClick="b4press"
            android:text="@string/blueAndBlack4" />

        <Button
            android:id="@+id/button5"
            android:layout_column="0"
            android:layout_row="2"
            android:onClick="b5press"
            android:text="@string/blueAndBlack5" />

        <Button
            android:id="@+id/button6"
            android:layout_column="1"
            android:layout_row="2"
            android:onClick="b6press"
            android:text="@string/blueAndBlack6" />

    </GridLayout>

    <TextView
        android:id="@+id/testString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="15dp"
        android:text="@string/testString"
        android:textColor="@android:color/white"
        android:textSize="25sp" />

    <Button
        android:id="@+id/linaToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="linaToggle"
        android:text="@string/hideLina" />

</LinearLayout>
